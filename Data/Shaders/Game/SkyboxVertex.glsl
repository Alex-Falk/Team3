#version 150 core

uniform mat4 viewMatrix;
uniform mat4 projMatrix;
in vec3 position;

out Vertex{
	vec3 normal;
} OUT;

void main(void) {
	vec3 tempPos = position - vec3(0, 0, 1);
	tempPos.y = -tempPos.y;
	OUT.normal = normalize(tempPos) * mat3(viewMatrix);
	gl_Position = projMatrix * vec4(tempPos, 1.0);
}


